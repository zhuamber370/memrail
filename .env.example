# ==============================
# MemLineage env template
# Copy to .env and edit values.
# ==============================

# Backend auth
AFKMS_REQUIRE_AUTH=false
KMS_API_KEY=change-this-api-key

# Backend database mode: sqlite (default) or postgres
AFKMS_DB_BACKEND=sqlite

# SQLite (default local mode)
AFKMS_SQLITE_PATH=data/afkms.sqlite3

# PostgreSQL (optional enhancement when AFKMS_DB_BACKEND=postgres)
AFKMS_DB_HOST=127.0.0.1
AFKMS_DB_PORT=5432
AFKMS_DB_NAME=afkms
AFKMS_DB_USER=afkms
AFKMS_DB_PASSWORD=change-this-db-password

# Optional direct override. Examples:
# AFKMS_DATABASE_URL=sqlite+pysqlite:////absolute/path/afkms.sqlite3
# AFKMS_DATABASE_URL=postgresql+psycopg://afkms:change-this-db-password@127.0.0.1:5432/afkms

# Optional PostgreSQL admin connection for bootstrap script
# (only needed for first-time role/database creation).
# If omitted, bootstrap defaults to:
# host/port from AFKMS_DB_HOST/AFKMS_DB_PORT
# db=postgres, user=postgres, password=<empty>
# AFKMS_PG_ADMIN_HOST=127.0.0.1
# AFKMS_PG_ADMIN_PORT=5432
# AFKMS_PG_ADMIN_DB=postgres
# AFKMS_PG_ADMIN_USER=postgres
# AFKMS_PG_ADMIN_PASSWORD=

# Frontend -> Backend
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_API_KEY=change-this-api-key
